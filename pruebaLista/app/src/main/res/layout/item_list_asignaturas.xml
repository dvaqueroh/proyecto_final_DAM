<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/md_indigo_100">
        <ImageView
        android:id="@+id/IdImgAsig"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/idAsig"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Asignatura"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/nombreAsig"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="num Asignatura"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/infoAsig"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="informacion Asignatura"
                android:textSize="20dp"
                android:textStyle="italic"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>